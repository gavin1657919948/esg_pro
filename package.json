  "now": {
    "name": "colmena",
    "alias": [
      "colmena",
      "colmena-cms",
      "colmena-mobile",
      "colmena-admin",
      "colmena-site",
      "colmena-app",
      "colmena-api",
      "colmena-demo"
    ],
    "env": {
      "MIGRATEDB": true,
      "INITDB": true,
      "API_HOST": "0.0.0.0",
      "API_BASE_URL": "https://colmena.now.sh"
    }
  },
  "lint-staged": {
    "globOptions": {
      "nonegate": true,
      "matchBase": false
    },
    "linters": {
      "packages/!(admin-lb-sdk)/**/*.{css,js,json,ts}": ["npm run lint", "git add"],
      "packages/*.{css,js,json,ts}": ["npm run lint", "git add"],
      "!(packages)/**/*.{css,js,json,ts}": ["npm run lint", "git add"],
      "*.{css,js,json,ts}": ["npm run lint", "git add"]
    }
  }
