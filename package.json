{
  "name": "@colmena/colmena",
  "version": "0.0.0",
  "description": "Colmena",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "Bram Borggreve <bram@colmena.io> (https://github.com/beeman) (https://twitter.com/beeman_nl)",
  "url": "https://github.com/colmena/colmena",
  "homepage": "https://github.com/colmena/colmena",
  "repository": {
    "type": "git",
    "url": "https://github.com/colmena/colmena"
  },
  "bugs": {
    "url": "https://github.com/colmena/colmena/issues"
  },
  "keywords": ["colmena", "cms", "mobile", "backend", "loopback", "angular", "admin"],
  "engines": {
    "node": ">= 4.2.1",
    "npm": ">= 3"
  },
  "scripts": {
    "app": "npm run app:start",
    "app:logs": "docker-compose -f docker-compose.app.yml logs -f",
    "app:start": "docker-compose -f docker-compose.app.yml up -d",
    "app:stop": "docker-compose -f docker-compose.app.yml stop",
    "app:rm": "npm run servers:stop && docker-compose rm -f",
    "clean": "npx rimraf node_modules && npx lerna clean --yes",
    "clean:api": "npx rimraf ./apps/api/client/dist",
    "postclean": "npm run clean:api",
    "console": "cd apps/api && loopback-console server/server.js",
    "contributors:add": "npx all-contributors add",
    "contributors:generate": "npx all-contributors generate",
    "build": "npm run build:admin",
    "build:admin": "cd apps/admin && npm run build",
    "dev": "concurrently --kill-others 'npm run dev:api' 'npm run dev:admin'",
    "dev:admin": "cd apps/admin && npm run dev",
    "dev:api": "nodemon apps/api/server/server.ts",
    "docker:build": "docker build -t colmena/colmena:latest .",
    "docker:run": "docker run -it -p 3000:3000 -e INITDB=1 --name colmena --rm colmena/colmena:latest",
    "initdb": "node apps/api/bin/initdb",
    "now": "now deploy --docker && now alias",
    "servers": "npm run servers:start",
    "servers:logs": "docker-compose -f docker-compose.servers.yml logs -f",
    "servers:start": "docker-compose -f docker-compose.servers.yml up -d",
    "servers:stop": "docker-compose -f docker-compose.servers.yml stop",
    "servers:rm": "npm run servers:stop && docker-compose rm -f",
    "lint": "prettier --write",
    "sdk": "npm run sdk:api",
    "sdk:api":
      "cross-env NODE_ENV=codegen ts-node  --fast --cache-directory ./.ts-cache node_modules/.bin/lb-sdk --wipe enabled apps/api/server/server.ts packages/admin-lb-sdk/src",
    "start": "cd apps/api && npm start",
    "test": "true",
    "precommit": "lint-staged",
    "postinstall": "node ./postinstall",
    "update": "ncu -a && npm update && lerna exec 'ncu -a && npm update'",
    "dev:alain": "ng serve --hmr -e=hmr  --proxy-config proxy.conf.json",
    "alain:build": "ng build --prod --build-optimizer",
    "alain:lint": "run-s lint:ts lint:style",
    "alain:lint:ts": "ng lint",
    "alain:lint:style": "stylelint \"{src}/**/*.less\" --syntax less",
    "alain:e2e": "ng e2e",
    "alain:test": "ng test -sr",
    "alain:test-coverage": "ng test -sr -cc",
    "alain:upgrade:style": "git subtree pull --prefix=src/styles/alain alain master",
    "alain:chore.build": "ng build --prod --build-optimizer --bh ./",
    "alain:chore.gh-pages": "run-s chore.build chore.deploy",
    "alain:chore.deploy": "gh-pages -d dist",
    "alain:chore.alain.push": "git subtree push --prefix=src/styles/alain alain master",
    "format": "prettier --single-quote --print-width 120 --write '{apps,modules,libs}/**/*.ts'"
  },
